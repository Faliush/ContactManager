@inherits PersonDetailComponentModel
@attribute [Authorize]

<ConfirmDialog @ref="dialog" />
<Modal @ref="modal">
    <BodyTemplate>
        <div class="container rounded bg-white">
            <div class="row">
                <div class="col-4 border-right mb-2">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="125px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg" /></div>
                </div>
                <div class="col-8 mb-1">
                    <div class="p-3 py-3">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h4 class="text-right">Profile</h4>
                        </div>
                        <div class="mt-2">
                            <div class="d-flex gap-2"><label class="labels fw-bold">Name:</label><p>@Result.FirstName</p></div>
                            <div class="d-flex gap-2"><label class="labels fw-bold">Surname:</label><p>@Result.LastName</p></div>
                        </div>
                        <div class="mt-3">
                            <div class="d-flex gap-2"><label class="labels fw-bold">Gender:</label><p>@Result.Gender</p></div>
                            <div class="d-flex gap-2"><label class="labels fw-bold">Mobile Number:</label><p>@Result.Phone</p></div>
                            <div class="d-flex gap-2"><label class="labels fw-bold">Email:</label><p>@Result.Email</p></div>
                            <div class="d-flex gap-2"><label class="labels fw-bold">Age:</label><p>@Result.Age</p></div>
                            <div class="d-flex gap-2"><label class="labels fw-bold">Date of birth:</label><p>@Result.DateOfBirth.ToString("d")</p></div>
                            <div class="d-flex gap-2"><label class="labels fw-bold">Country:</label><p>@(Result.CountryName ?? "Nothing")</p></div>
                            <div class="d-flex gap-2"><label class="labels fw-bold">Address:</label><p>@(Result.Address ?? "Nothing")</p></div>
                    
                        </div>
             
                    </div>
                </div>
                <div class="d-flex gap-lg-5 justify-content-center">
                    <a class="btn btn-success btn-md" href="person/update/@PersonId" role="button" style="width:100px">Edit</a>
                    <Button Color="ButtonColor.Danger" Size="Size.Medium" @onclick="ShowConfirmationAsync" style="width:100px">Delete</Button>
                </div>
            </div>
        </div>
    </BodyTemplate>
</Modal>

<Button Color="ButtonColor.Info" @onclick="ShowPersonDetailComponent">
    More Information
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="feature-icon-person ms-1">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 15.75l-2.489-2.489m0 0a3.375 3.375 0 10-4.773-4.773 3.375 3.375 0 004.774 4.774zM21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
</Button>

