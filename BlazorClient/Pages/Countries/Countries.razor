@page "/countries"
<PageTitle>Countries</PageTitle>
@attribute [Authorize(Policy = "AdministratorPage")]
@inherits CountriesComponentModel

<ConfirmDialog @ref="dialog" />
<form  method="get">
    <div class="container-xxl mt-4 bg-light rounded-3 shadow-lg border border-2 p-3">
       
        <div class="mt-3 mb-4">
            <Button Color="ButtonColor.Primary" Type="ButtonType.Link" To="country/create" class="ms-5">
                Create New 
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="feature-icon-white">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6" />
                </svg>
            </Button>
        </div>

        <div class="tableFixHead w-75 ms-auto me-auto">
            <table class="table ms-auto me-auto">
                <thead >
                    <tr>
                        <th style="width:5%"></th>
                        <th style="width:30%">
                            Id
                        </th>
                        <th style="width:25%">
                            Name
                        </th>
                        <th>Options</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach(var country in Response!.Result!)
                    {
                        <tr>
                            <td>
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="feature-icon-person">
                                  <path stroke-linecap="round" stroke-linejoin="round" d="M12.75 3.03v.568c0 .334.148.65.405.864l1.068.89c.442.369.535 1.01.216 1.49l-.51.766a2.25 2.25 0 01-1.161.886l-.143.048a1.107 1.107 0 00-.57 1.664c.369.555.169 1.307-.427 1.605L9 13.125l.423 1.059a.956.956 0 01-1.652.928l-.679-.906a1.125 1.125 0 00-1.906.172L4.5 15.75l-.612.153M12.75 3.031a9 9 0 00-8.862 12.872M12.75 3.031a9 9 0 016.69 14.036m0 0l-.177-.529A2.25 2.25 0 0017.128 15H16.5l-.324-.324a1.453 1.453 0 00-2.328.377l-.036.073a1.586 1.586 0 01-.982.816l-.99.282c-.55.157-.894.702-.8 1.267l.073.438c.08.474.49.821.97.821.846 0 1.598.542 1.865 1.345l.215.643m5.276-3.67a9.012 9.012 0 01-5.276 3.67m0 0a9 9 0 01-10.275-4.835M15.75 9c0 .896-.393 1.7-1.016 2.25" />
                                </svg>
                            </td>
                            <td>@country.Id</td>
                            <td>@country.Name</td>
                            <td class="d-flex gap-3 justify-content-center">
                                <a class="btn btn-success btn-md" href="country/update/@country.Id" role="button" style="width:100px">Edit</a>
                                <Button Color="ButtonColor.Danger" Outline="true" @onclick="() => ShowConfirmationAsync(country.Id)" style="width:125px">Delete</Button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</form>
